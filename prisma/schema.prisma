generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model candidato{
  id String @id @default(cuid())
  nome String
  whatsapp String
  email String
  cargo String
  mensagem String
  dt_criacao  DateTime @default(now())
}

model cliente{
  id String @id @default(cuid())
  nome String
  cep String
  numero String
  complemento String
  dt_criacao  DateTime @default(now())
}

model venda{
  id String @id @default(cuid())
  prazo_entrega DateTime
  anexo Bytes
  co_cliente String
  dt_criacao  DateTime @default(now())
}

model status{
  id String @id @default(cuid())
  descrcao String
  dt_criacao  DateTime @default(now())
}

model atividade{
  id String @id @default(cuid())
  co_venda String
  co_status String
  dt_criacao  DateTime @default(now())
}

model status_orcamento{
  id String @id @default(cuid())
  descricao String
  dt_criacao  DateTime @default(now())
}

model orcamento{
  id String @id @default(cuid())
  nome String
  cidade String
  cell String
  email String
  mensagem String
  co_status String @default("1")
  dt_criacao DateTime @default(now())
}